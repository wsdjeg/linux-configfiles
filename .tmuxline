# This tmux statusbar config was created by tmuxline.vim
# on Sun, 12 Jun 2016

set -g status-bg "colour59"
set -g message-command-fg "colour15"
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-fg "colour41"
set -g message-bg "colour102"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour15"
set -g message-command-bg "colour102"
set -g status-attr "none"
#set -g status-utf8 "on"
set -g pane-border-fg "colour102"
set -g status-left-attr "none"
setw -g window-status-fg "colour172"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour59"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour41"
setw -g window-status-separator ""
setw -g window-status-bg "colour59"
set -g status-left "#[fg=colour59,bg=colour41] #S #[fg=colour41,bg=colour59,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour102,bg=colour59,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour102] %Y-%m-%d  %H:%M #[fg=colour41,bg=colour102,nobold,nounderscore,noitalics]#[fg=colour59,bg=colour41] #h "
setw -g window-status-format "#[fg=colour172,bg=colour59] #I #[fg=colour172,bg=colour59] #W "
setw -g window-status-current-format "#[fg=colour59,bg=colour102,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour102] #I #[fg=colour15,bg=colour102] #W #[fg=colour102,bg=colour59,nobold,nounderscore,noitalics]"
